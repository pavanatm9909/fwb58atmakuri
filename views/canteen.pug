extends layout

block content
    h1= title
    div(class="container-fluid")
        div(class="row")
            -
                let details= [
                    {
                        "Item_name": "Puff",
                        "Item_type":"SnakItem",
                        "Item_price":3
                    },
                    {
                        "Item_name": "Cake",
                        "Item_type":"Dessert",
                        "Item_price":6
                    },
                    {
                        "Item_name": "Coke",
                        "Item_type":"Drink",
                        "Item_price":1
                    },
                ]
            each item,index in details
                table(style='width:100%')
                    tr
                        div(class="col-sm-2" onclick=`buy(${index})`) #{item.Item_name}
                        div(class="col-sm-2" onclick=`buy(${index})`) #{item.Item_type}
                        div(class="col-sm-2" onclick=`buy(${index})`) $#{item.Item_price}
            
            script.                
                  function buy(itemNo)
                  {
                        alert(`You purchased item ${itemNo+1}`)
                  }